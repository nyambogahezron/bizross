{
	"name": "root",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"clean": "turbo run clean && rm -rf node_modules .turbo"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.2",
		"turbo": "latest"
	},
	"packageManager": "bun@1.3.2",
	"engines": {
		"node": ">=18"
	},
	"workspaces": [
		"apps/*",
		"packages/*",
		"services/*"
	]
}
